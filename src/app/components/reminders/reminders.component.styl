@import '~app/shared/colors'

.reminders
  flex-direction column
  margin-top 30px
  width 600px
  align-items center
  .form
    margin 30px 0
    &__control
      font-size 16px
    .date
      width 150px
    .time
      width 80px
    .text
      width 275px
    &__submit
      width 80px
      font-size 16px
      background-color $buttonColor
  &__list
    flex-direction: column
    width 500px
    min-height 500px
    max-height 500px
    overflow-y auto
    overflow-x hidden
  .reminder
    width 600px
    min-height 30px
    padding 5px
    margin-top 10px
    &_inactive
      color: $reminderInactiveColor
    &__date
      width 80px
      margin-right 10px
    &__time
      width 40px
      margin-right 10px
    &__text
      margin-right 10px
      width 320px
      word-break break-all
      font-style italic
    &__delete
      height 20px
      width 20px
  
