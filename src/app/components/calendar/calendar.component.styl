@import '~app/shared/colors'

.calendar
  flex-direction column
  width 490px
  margin-top 40px
  &__name
    justify-content center
    font-size 40px
  .header
    margin-top 20px
    flex-direction row
    background $calendarHeaderBackgroundColor
    &__item
      max-width 70px
      min-width 70px
      height 70px
      border 1px solid $calendarBorderColor
      color $calendarHeaderTextColor
      justify-content center
      align-items center
      font-size 20px
  &__item
    max-width 70px
    min-width 70px
    height 70px
    background $dayBackgroundColor
    border 1px solid $calendarBorderColor
    padding 5px 10px
    &_highlighted
      background $dayBackgroundColorActive
    &_disabled
      background $backgroundColor
  &__body
    flex-flow wrap
