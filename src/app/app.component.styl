@import '~app/shared/colors'

.app-container
  flex-direction column
  align-items center
.navigation
  width w = 490px
  height 50px
  line-height 50px
  &__item
    display block
    text-decoration none
    width (w / 3)
    text-align center
    font-size 20px
    color $mainFontColor
    background $mainNavColor
    border 1px solid white
    &_active
      background $activeNavColor
